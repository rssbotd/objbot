#!/usr/bin/env python3
# This file is placed in the Public Domain.
# pylint: disable=C0413,W0212


"daemon"


import getpass
import os
import sys


from objt import errors 
from objz import Config
from objz import forever, initer, pidfile, privileges, wrap


from objbot.modules import face


Cfg = Config("objbot")
Cfg.mod = "cmd,err,mod,irc,rss,thr"
Cfg.user = getpass.getuser()


def main():
    "main"
    privileges(Cfg.user)
    pidfile(Cfg.pidfile)
    initer(Cfg.mod, face)
    forever()


if __name__ == "__main__":
    wrap(main)
    errors(print)
